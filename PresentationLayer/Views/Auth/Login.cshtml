@model LoginModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success position-fixed bottom-0 end-0 m-4 shadow" style="z-index:1050;" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger position-fixed bottom-0 end-0 m-4 shadow" style="z-index:1050;" role="alert" ">
            @TempData["ErrorMessage"]

        </div>
    }
}
<div class="mb-md-5 mt-md-4 ">
    <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
    <p class="text-white-50 mb-5">Please enter your login and password!</p>
    <form action="login" method="post">
        <div data-mdb-input-init class="form-outline form-white mb-4">
            <span asp-validation-for="Email" class="text-danger"></span>
            <input type="email" asp-for="Email" class="form-control text-white bg-dark form-control-lg" placeholder="Email" />

        </div>
        <div data-mdb-input-init class="form-outline form-white mb-4">
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password" class="form-control text-white bg-dark form-control-lg" placeholder="Password" />

        </div>
        <p class="small mb-2 text-end"><a class="text-white-50" href="#!">Forgot password?</a></p>
        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" name="submit" type="submit">Login</button>
    </form>
    <div class="mt-4">
        <p>
            Don't have an account? <a asp-controller="Auth" asp-action="Register" class="text-white-50 fw-bold">Sign Up</a>
        </p>
    </div>
</div>
