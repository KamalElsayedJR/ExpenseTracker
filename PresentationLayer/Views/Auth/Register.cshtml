@model RegisterModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Reqister";
    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger position-fixed bottom-0 end-0 m-4 shadow" style="z-index:1050;" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
}

<div class="mb-md-5 mt-md-4 ">

    <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
    <p class="text-white-50 mb-5">Please Register To Use Expense Tracker</p>

    <form asp-action="Register" method="post">

        <div data-mdb-input-init class="form-outline form-white mb-4">
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input type="text" asp-for="UserName" class="form-control text-white bg-dark form-control-lg" placeholder="UserName" />
        </div>

        <div data-mdb-input-init class="form-outline form-white mb-4">
            <span asp-validation-for="Email" class="text-danger"></span>
            <input type="email" asp-for="Email" class="form-control text-white bg-dark form-control-lg" placeholder="Email"  />
        </div>

        <div data-mdb-input-init class="form-outline form-white mb-4">
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password" class="form-control text-white bg-dark form-control-lg" placeholder="Password" />
        </div>

        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" name="submit" type="submit">Register</button>
    </form>
    <div class="mt-4">
        <p>
            Already have an account? <a asp-controller="Auth" asp-action="Login" class="text-white-50 fw-bold">Login</a>
        </p>
    </div>
</div>
@section ClientSideValidation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
