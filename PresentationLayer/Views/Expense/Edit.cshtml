@model ExpenseCreateModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger position-fixed bottom-0 end-0 m-4 shadow" style="z-index:1050;" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
}
<div>
    <div class="mb-md-3 mt-md-2 ">
        <h2 class="fw-bold mb-5 text-uppercase">@Model.Title</h2>
        <form asp-action="Edit" method="post">
            <div data-mdb-input-init class="form-outline form-white mb-4">
                <span asp-validation-for="Title" class="text-danger"></span>
                <input type="text" asp-for="Title" class="form-control text-white bg-dark form-control-lg" placeholder="Title" />
            </div>
            <div data-mdb-input-init class="form-outline form-white mb-4">
                <span asp-validation-for="Amount" class="text-danger"></span>
                <input type="number" asp-for="Amount" class="form-control text-white bg-dark form-control-lg" placeholder="Amount" />
            </div>
            <div data-mdb-input-init class="form-outline form-white mb-4">
                <span asp-validation-for="Date" class="text-danger"></span>
                <input type="date" asp-for="Date" class="form-control text-white bg-dark form-control-lg" />
            </div>
            <div data-mdb-input-init class="form-outline form-white mb-4">
                <select class="form-control text-white bg-dark form-control-lg4" asp-for="@Model.CategoryId"
                        asp-items="@Model.Category">
                </select>
            </div>
            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-outline-primary text-white btn-lg px-5" name="submit" type="submit">Edit</button>
            <a asp-controller="Expense" asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
        </form>
    </div>
</div>
@section ClientSideValidation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
