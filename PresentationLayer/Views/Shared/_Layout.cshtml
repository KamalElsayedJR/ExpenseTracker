<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PresentationLayer.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @* navbar start *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ExpenseTracker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-3">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Expense" asp-action="index">Expenses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Category" asp-action="index">Categories</a>
                        </li>
                    </ul>
                    @* Profile *@
                    <ul class="navbar-nav">
                        <li class="nav-item text-end">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Auth" asp-action="Profile">Profile</a>
                        </li>
                    </ul>
                    @* Profile *@
                    @* logout *@
                    <ul class="navbar-nav">
                        <li class="nav-item text-end">
                            <a class="nav-link text-danger" asp-area="" asp-controller="Auth" asp-action="Logout">LogOut</a>
                        </li>
                    </ul>
                    @* logout *@
                </div>
            </div>
        </nav>
        @* navbar end *@
    </header>

    <main role="main" class="pb-3 gradient-custom min-vh-100">
        <div class="container">
            <section>
                <div class="container py-5 h-auto">
                    <div class="row d-flex justify-content-center align-items-center h-auto">
                        <div class="col-12">
                            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                                <div class="card-body p-5 text-center">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    @* Footer start*@
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - ExpenseTracker - <a class="text-primary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @* Footer end*@


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("ClientSideValidation", required: false)
</body>
</html>
